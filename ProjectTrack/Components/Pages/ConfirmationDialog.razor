<MudDialog>
    <MudDialogContent>
        @ContentText
    </MudDialogContent>
    <MudDialogActions>
        <MudButton OnClick="Confirm" Color="Color.Error">@ButtonText</MudButton>
        <MudButton OnClick="Cancel" Color="Color.Default">@CancelText</MudButton>
    </MudDialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public string ContentText { get; set; } = "Are you sure?";
    [Parameter] public string ButtonText { get; set; } = "Confirm";
    [Parameter] public string CancelText { get; set; } = "Cancel";

    private void Confirm() => MudDialog.Close(DialogResult.Ok(true));
    private void Cancel() => MudDialog.Cancel();
}
