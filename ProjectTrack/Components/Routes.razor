@using Microsoft.AspNetCore.Components.Routing
@using ProjectTrack.Components.Layout
@using ProjectTrack.Components.Pages
@inject AuthService AuthService

<CascadingValue Value="AuthService">
    @if (AuthService.IsAuthenticated)
    {
        <!-- Render Routes for Authenticated Users -->
        <Router AppAssembly="@typeof(App).Assembly">
            <Found Context="routeData">
                <Microsoft.AspNetCore.Components.RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
            </Found>
            <NotFound>
                <LayoutView Layout="@typeof(MainLayout)">
                    <p>Sorry, there's nothing at this address.</p>
                </LayoutView>
            </NotFound>
        </Router>
    }
    else
    {
        <!-- Show Login Page if User is Not Authenticated -->
        <Login />
    }
</CascadingValue>
